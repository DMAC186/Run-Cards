      flex-direction: column; 

      justify-content: center; 

      align-items: center; 

      box-shadow: 0 8px 20px rgba(0,0,0,0.2); 

      padding: 1em; 

      box-sizing: border-box; 

      text-align: center; 

    } 

 

    .front { 

      background: #2e5aac; 

      color: white; 

    } 

 

    .back { 

